{% load object_handlers %}
<LTR_experiment>
  <config>
    <root_directory>{{ root_directory }}</root_directory>
  </config>

  {% for data in datas %}
  <data name="{{ data.name }}" approach="{{ data.approach }}" format="{{ data.format }}">
    {{ data.path }}
  </data>
  {% endfor %}

  {% for object in objects %}
  {{ object.xml|safe }}
  {% endfor %}

  <launch>
    {% for train in trains %}
    <train name="{{ train.name }}" data="{{ train.trainData.name }}" learner="{{ train.learner.name }}">
      {% for data in train.predict_ %}
      <predict>{{ data.name }}</predict>
      {% endfor %}
      {% if train.generate_cpp %}
      <cpp />
      {% endif %}
    </train>
    {% endfor %}

    {% for crossvalidation in crossvalidations %}
    <crossvalidation fold="{{ crossvalidation.splitter }}">
      {% for learner in crossvalidation.learners.all %}
      <learner>{{ learner.name }}</learner>
      {% endfor %}

      {%for measure in crossvalidation.measures.all %}
      <measure>{{ measure.name }}</measure>
      {% endfor %}

      <data>{{ crossvalidation.data.name }}</data>
    </crossvalidation>
    {% endfor %}
  </launch>

</LTR_experiment>